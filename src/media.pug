extends /template.pug

block vars
  - const title = 'Unser Media Kit'
  - const description = 'Damit wir mal groß und berühmt werden, kannst du dieses Media Kit gerne nutzen, um allen von uns zu erzählen.'

block main
  #media.wrap
    section
      h1= title

      article#logo
        h2 Logo quadratisch
        a.logo.logo-square(href=assetPath("/img/media/einundzwanzig-square.svg") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-square.svg") alt="Logo quadratisch")

      article
        h2 Logo horizontal
        a.logo.logo-horizontal(href=assetPath("/img/media/einundzwanzig-horizontal.svg") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-horizontal.svg") alt="Logo horizontal")

      article
        h2 Logo quadratisch, invertiert
        a.logo.logo-square.inverted(href=assetPath("/img/media/einundzwanzig-square-inverted.svg") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-square-inverted.svg") alt="Logo quadratisch, invertiert")

      article
        h2 Logo horizontal, invertiert
        a.logo.logo-horizontal.inverted(href=assetPath("/img/media/einundzwanzig-horizontal-inverted.svg") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-horizontal-inverted.svg") alt="Logo horizontal, invertiert")

      article
        h2 Telegram Vorlage Gruppenbild
        a.telegram(href=assetPath("/img/media/einundzwanzig-telegram.png") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-telegram.png") alt="Telegram")

      article#cover
        h2 Cover
        a.cover(href=assetPath("/img/media/einundzwanzig-cover-interview.png") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-cover-interview.png") alt="Cover Interview")

        a.cover(href=assetPath("/img/media/einundzwanzig-cover-lesestunde.png") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-cover-lesestunde.png") alt="Cover Lesestunde")

      article#praesentation
        h2 Präsentationsvorlage
        p
          = "Nutze diese "
          a(href="https://www.onlyoffice.com/de/download-desktop.aspx" target="_blank") Only Office
          = " Vorlagen gerne für deine Präsentationen, um Zeit in der Vorbereitung zu sparen. Hier findest du "
          a(href="/files/praesentation/Bitcoin_Praesentation_Hinweise.pdf" target="_blank") weitere Hinweise dazu
          = "."
        ul
          li
            a(href="/files/praesentation/Bitcoin_Vorlage_Einundzwanzig.pptx" target="_blank") Präsentationsvorlage Einundzwanzig
          li
            a(href="/files/praesentation/Bitcoin_Grundlagen.pptx" target="_blank") Präsentation: Bitcoin Grundlagen
        img.presentation(src=assetPath("/img/media/einundzwanzig-praesentation.jpg") alt="Einundzwanzig Präsentationsvorlage")
        p Lasst uns gerne auch wissen, wenn du eine von dir erstellte Präsentation mit der Community teilen und hier veröffentlichen möchtest.

      article#meetup_flyer
        h2 Meetup Flyer Vorlage
        p
          = "Von "
          a(href="https://x.com/Niklvs03/status/1459629529731903495?s=20" target="_blank" rel="noopener noreferrer") SATNIK
          = ": "
          a(href="https://drive.google.com/file/d/1FUv7WfCgwOp-5aAB3gPl_hSPEm3eXkmH/view" target="_blank" rel="noopener noreferrer") Photoshop
          = " und "
          a(href="https://www.canva.com/design/DAEvn3g1ycs/cJ-4MfDZBvLHZN3SKRu5Cg/view?utm_content=DAEvn3g1ycs&utm_campaign=designshare&utm_medium=link&utm_source=sharebutton&mode=preview" target="_blank" rel="noopener noreferrer") Canva
        img.flyer(src=assetPath("/img/media/einundzwanzig-meetup-flyer-preview.jpg") alt="Einundzwanzig Meetup Flyer Vorlage")

      article#wallpaper
        h2 Wallpaper
        a.wallpaper(href=assetPath("/img/media/einundzwanzig-wallpaper.png") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-wallpaper-preview.jpg") alt="Wallpaper")

        a.wallpaper(href=assetPath("/img/media/einundzwanzig-wallpaper-owl.png") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-wallpaper-owl-preview.jpg") alt="Wallpaper Meetup OWL")

        a.wallpaper(href=assetPath("/img/media/einundzwanzig-wallpaper-benrath.png") target="_blank")
          img(src=assetPath("/img/media/einundzwanzig-wallpaper-benrath-preview.jpg") alt="Wallpaper Meetup Düsseldorf")

        each i in [1, 2, 3, 4, 5]
          a.wallpaper(href=assetPath(`/img/media/einundzwanzig-wallpaper-dezentralschweiz-0${i}.jpg`) target="_blank")
            img(src=assetPath(`/img/media/einundzwanzig-wallpaper-dezentralschweiz-0${i}-preview.jpg`) alt=`Wallpaper Meetup Schweiz ${1}`)

        p
          a(href="https://drive.google.com/drive/folders/1SWZfGja8DoYuXsV5shCPm67Bthgmgtl2" target="_blank" rel="noopener noreferrer") Weitere Wallpaper

      article#schriften
        h2 Schriften
        ul.fonts
          li.font-bold
            a(href="https://www.dafont.com/the-bold-font.font" target="_blank" rel="nofollow noopener") Logo: The Bold Font
          li.font-inconsolata
            a(href="https://fonts.google.com/specimen/Inconsolata" target="_blank" rel="nofollow noopener") Copy: Inconsolata

      article#farben
        h2 Farben
        ul.colors
          li.orange #F7931A
          li.derweg #00B4CF
          li.nostrtalk #A915FF
          li.interview #151515

      article#dokumente
        h2 Dokumente
        ul
          li: a(href="/files/EINUNDZWANZIG-WhatWorkedForUs.pdf") Einundzwanzig: What Worked For Us
          li
            a(href="/files/Konzept_ProWo_-_Kaurischnecke_zum_Bitcoin.pdf" target="_blank") Schulprojekt: Von der Kaurischnecke zum Bitcoin
            = " (von "
            a(href="https://primal.net/p/nprofile1qqsz9m0vk8t5kxvn9nshd8y2j7t7ypkc0gur8dk9xm7x8769f4l6w7s8u6wsk" target="_blank" rel="noopener noreferrer") Pitti21
            = " und "
            a(href="https://primal.net/p/nprofile1qqswpk6hcuacv3wd9naarml8ptym5387r9f2vkw898ugmzyhcty6nrqes2f5w" target="_blank" rel="noopener noreferrer") katapai
            = ")"
          li
            = "So schützen Sie Ihre Bitcoin vor neugierigen Blicken: "
            a(href="/files/So_schuetzen_Sie_Ihre_Bitcoin_vor_neugierigen_Blicken.pdf" target="_blank") PDF
            = " und "
            a(href="/files/So_schuetzen_Sie_Ihre_Bitcoin_vor_neugierigen_Blicken.pptx" target="_blank") Präsentation
            = " (von "
            a(href="https://primal.net/DeWe" target="_blank" rel="noopener noreferrer") DeWe
            = ")"
